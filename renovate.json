{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "arghyadeep"
  ],
  "gomod": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodUpdateImportPaths", "gomodTidy"]
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["gomod"],
      "matchPackageNames": [
        "golang.org/x/net",
        "golang.org/x/oauth2",
        "google.golang.org/protobuf"
      ],
      "enabled": true,
      "rangeStrategy": "bump"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)go\\.mod$"],
      "matchStrings": [
        "(?<depName>golang\\.org\\/x\\/net)\\s+=>\\s+golang\\.org\\/x\\/net\\s+(?<currentValue>v[^\\s]+)",
        "(?<depName>golang\\.org\\/x\\/oauth2)\\s+=>\\s+golang\\.org\\/x\\/oauth2\\s+(?<currentValue>v[^\\s]+)",
        "(?<depName>google\\.golang\\.org\\/protobuf)\\s+=>\\s+google\\.golang\\.org\\/protobuf\\s+(?<currentValue>v[^\\s]+)"
      ],
      "datasourceTemplate": "go",
      "versioningTemplate": "semver"
    }
  ]
}
