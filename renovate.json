{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "Arghyadeepdey"
  ],
  "prHourlyLimit": 20,
  "prConcurrentLimit": 30,
  "prCreation": "immediate",
  "recreateClosed": true,
  "rebaseWhen": "conflicted",
  "platformAutomerge": false,
  "gomod": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodTidy"]
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "rangeStrategy": "bump",
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "matchPackageNames": [
        "golang.org/x/net",
        "golang.org/x/oauth2",
        "google.golang.org/protobuf"
      ],
      "enabled": true,
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["regex"],
      "enabled": true,
      "rangeStrategy": "bump"
    },
    {
      "matchFileNames": ["*/go.mod"],
      "excludeDepNames": ["go"],
      "branchName": "platform/thirdparty/{{parentDir}}",
      "commitMessagePrefix": "feat({{parentDir}}): ",
      "prTitle": "Update {{parentDir}} dependencies",
      "groupName": "{{parentDir}}-dependencies"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)go\\.mod$"],
      "matchStrings": [
        "(?<depName>golang\\.org/x/net)\\s+=>\\s+golang\\.org/x/net\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)",
        "(?<depName>golang\\.org/x/oauth2)\\s+=>\\s+golang\\.org/x/oauth2\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)",
        "(?<depName>google\\.golang\\.org/protobuf)\\s+=>\\s+google\\.golang\\.org/protobuf\\s+(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "datasourceTemplate": "go"
    }
  ]
}
