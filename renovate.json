{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "arghyadeep"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": ["gomodUpdateImportPaths", "gomodTidy"]
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": [
        "golang.org/x/net",
        "golang.org/x/oauth2", 
        "google.golang.org/protobuf"
      ],
      "matchDepTypes": ["replace"],
      "rangeStrategy": "bump",
      "enabled": true
    }
  ]
}
